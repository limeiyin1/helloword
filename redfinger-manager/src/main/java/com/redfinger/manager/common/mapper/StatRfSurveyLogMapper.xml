<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.redfinger.manager.common.mapper.StatRfSurveyLogMapper">
	<resultMap id="BaseResultMap" type="com.redfinger.manager.modules.stat.base.StatDomain">
		<result column="id" jdbcType="INTEGER" property="id" />
		<result column="number" jdbcType="INTEGER" property="number" />
		<result column="amount" jdbcType="DOUBLE" property="amount" />
		<result column="label" jdbcType="VARCHAR" property="label" />
	</resultMap>
	
	<select id="StatSurveyLog" parameterType="com.redfinger.manager.common.domain.RfSurveyLog" resultMap="BaseResultMap">
		<![CDATA[
		    SELECT count(1) as number
			FROM  rf_survey_log
			WHERE survey_id = #{surveyId,jdbcType=INTEGER} and problem_id = #{problemId,jdbcType=INTEGER} and answer_id = #{answerId,jdbcType=INTEGER}
		]]> 
			<!--  排序-->
		<![CDATA[
		order by number asc
		]]>
	</select>

</mapper>